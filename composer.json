{
    "name": "bag2/oauth-pkce",
    "description": "OAuth PKCE implementation independent of OAuth servers.",
    "license": "Apache-2.0",
    "keywords": ["oauth", "rfc7636"],
    "require": {
        "php": "^7.1 || ~8.0.0 || ~8.1.0",
        "ircmaxell/random-lib": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Bag2\\OAuth\\PKCE\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bag2\\OAuth\\PKCE\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
